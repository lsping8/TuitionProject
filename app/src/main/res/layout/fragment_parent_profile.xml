<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:padding="10dp">

    <ImageView
        android:id="@+id/parentImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/parentNameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/parentImage"
        android:background="@drawable/round_edge_rectangle"
        android:paddingLeft="5dp"
        android:layout_marginLeft="5dp">

        <EditText
            android:id="@+id/parentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:hint="NAME"
            android:text="something"
            android:textColor="#000000"
            android:textColorHint="#C0C0C0"
            android:padding="0dp"
            android:background="@android:color/transparent" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parentNameLayout"
        android:paddingTop="5dp">

        <LinearLayout
            android:id="@+id/profileLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/round_edge_rectangle">

                <TextView
                    android:id="@+id/info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="MY INFO"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="#000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/contactNumber"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Contact Number"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="1dp"
                        android:background="#000000"/>

                    <EditText
                        android:id="@+id/editContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:hint="Contact Number"
                        android:singleLine="true"
                        android:maxLength="20"
                        android:textColor="#000000"
                        android:textColorHint="#C0C0C0"
                        android:background="@android:color/transparent"
                        android:paddingLeft="5dp"/>

                </LinearLayout>

                <TextView
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="#000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/secondInfo"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="SecondInfo"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="1dp"
                        android:background="#000000"/>

                    <EditText
                        android:id="@+id/editSecondInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:hint="secondInfo"
                        android:singleLine="true"
                        android:maxLength="10"
                        android:textColor="#000000"
                        android:textColorHint="#C0C0C0"
                        android:background="@android:color/transparent"
                        android:paddingLeft="5dp"/>
                </LinearLayout>

                <TextView
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="#000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/thirdInfo"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="ThirdInfo"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="1dp"
                        android:background="#000000"/>

                    <EditText
                        android:id="@+id/editThirdInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:hint="thirdInfo"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textColorHint="#C0C0C0"
                        android:background="@android:color/transparent"
                        android:paddingLeft="5dp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/children"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/round_edge_rectangle"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Children"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>