<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <solid android:color="#C0C0C0"/>
            <stroke
                android:width="15dp"
                android:color="#00ffffff"/>
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="1dp">
        <shape android:shape="oval">
            <solid android:color="#FF0000"/>
            <stroke
                android:width="16dp"
                android:color="#00ffffff"/>
        </shape>
    </item>
</layer-list>